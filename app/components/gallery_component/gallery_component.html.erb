<section id="<%= dom_id @gallery %>" class="overflow-hidden text-gray-700 ">
	<div class="py-2 mx-auto lg:pt-12">
		<h2><%= @gallery.title %></h2>
		<p><%= @gallery.description %></p>
		<div class="flex flex-wrap -m-1 md:-m-2">
			<% @gallery.images.each do |image| %>
				<div class="flex flex-wrap w-1/3">
					<div class="w-full max-h-60 p-1 md:p-2 relative">
						<%= image_tag image, class: "block object-cover object-center w-full h-full rounded-lg" %>
						<% if @admin %>
							<%= link_to icon("trash"), delete_image_admin_gallery_path(id: @gallery.id, image_id: image.id), class: "absolute bottom-0 right-3 h-5 w-5 bg-white opacity-80 rounded", data: {  "turbo-method": :delete, confirm: "Are you sure?" } %>
						<% end %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</section>
