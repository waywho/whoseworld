<div data-controller="sidebar-component" data-placement="<%= @position %>">
   <navbar class="fixed top-0 left-0 md:hidden flex w-full justify-between items-center z-[90] <%= navbar_classes %>">

      <%= link_to root_path, class: "transition ease-out duration-1000", "data-sidebar-component-target": "logo" do %>
         <%= logo %>
       <% end %>

      <button type="button" class="flex items-center p-2 text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:outline-none dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
         data-action="click->sidebar-component#toggle"
         data-sidebar-component-target="trigger"
         aria-controls="navbar-default"
         aria-expanded="false">
         <span data-sidebar-component-target="open">
            <span class="sr-only">Open main menu</span>
            <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd">
            </path></svg>
         </span>
         <span class="hidden" data-sidebar-component-target="close">
            <svg aria-hidden="true" class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
           <span class="sr-only">Close menu</span>
         </span>
      </button>
   </navbar>

   <aside class="w-64 fixed top-4 <%= placement %> pb-4 transition ease-in duration-500 bg-transparent z-[99] nav"
          aria-label="Sidebar"
          data-sidebar-component-target="navigation">
      <div class="overflow-y-auto p-6 bg-white rounded-lg dark:bg-gray-800 overflow-x-hidden opacity-75">
         <%= link_to root_path do %>
            <%= logo %>
          <% end %>
          <div class="text-sm ml-4 text-base"><%= @subtitle %></div>

         <ul class="mt-8 space-y-2">
            <% @menu_items.each do |item| %>
               <li>
                  <%= link_to item[0], item[1], {class: "#{menu_classes} #{params[:id] == item[0]&.downcase ? active_menu_classes : non_active_menu_classes}"}.merge(additional_options) %>
               </li>
               <%= content %>
            <% end %>
         </ul>
      </div>
   </aside>
</div>
