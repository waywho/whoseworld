<!DOCTYPE html>
<html>
  <head>
    <title><%= Current.tenant.name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%#= favicon_link_tag asset_path("#{Current.tenant&.slug}-favicon.png") %>
  </head>

  <body>
    <%= render LayoutComponent.new(site: Current.tenant) do |c| %>
      <% if Current.tenant.menu_items.present? %>
        <% c.with_navigation %>
      <% end %>
      <%= render AlertComponent.new(flash) %>
      <%= yield %>
      <% c.with_footer %>
    <% end %>
  </body>
</html>
