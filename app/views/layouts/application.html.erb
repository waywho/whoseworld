<!DOCTYPE html>
<html>
  <head>
    <title>Whoseworld</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
     <%= render LayoutComponent.new(site: @site, admin: true) do |c| %>
      <% if current_user %>
        <% c.with_navigation %>
      <% end %>
      <%= render AlertComponent.new(flash) %>
      <%= yield %>
    <% end %>

  </body>
</html>
