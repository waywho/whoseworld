<h1>Galleries</h1>

<%= link_to "New gallery", new_admin_gallery_path, class: "btn btn-primary my-4 float-right" %>
<br class="clear-both" />

<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <table>
        <thead>
            <tr>
                <th scope="col" class="py-3 px-6">
                    Title
                </th>
                <th scope="col" class="py-3 px-6">
                    Page
                </th>
                <th scope="col" class="py-3 px-6">
                    Featured
                </th>
            </tr>
        </thead>
        <tbody>
            <% @galleries.each do |gallery| %>
              <tr id="<%= dom_id gallery %>" class="hover-row">
                <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  <%= link_to admin_gallery_path(id: gallery) do %>
                    <%= gallery.title %>
                  <% end %>
                </th>
                <td class="py-4 px-2">
                  <%= gallery.page&.title %>
                </td>
                <td class="py-4 px-2">
                  <%= simple_form_for gallery, url: admin_gallery_path(id: gallery), html: { "data-controller": "submit-by-click" } do |f| %>
                    <%= f.input :feature, input_html: {
                      id: "gallery_feature_gallery_#{gallery.id}",
                      "data-action": "submit-by-click#submit"
                    } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
    </table>
</div>
