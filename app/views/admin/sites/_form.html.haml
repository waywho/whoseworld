= semantic_form_for [:admin, @site], builder: ActiveAdmin::FormBuilder do |f|
  = f.inputs do
    = f.input :id, as: :hidden
    = f.input :name
    = f.input :subtitle
    = f.input :domain
    = f.input :subdomain
    = f.input :slug
    = f.input :nav_position
    = f.input :layout_style
    = f.input :public

  = render "components/attachment_field", form: f, fields: [:logo, :logo_for_dark, :logo_with_tag, :logo_with_tag_for_dark]

  %br
  = f.inputs "DomainAliases" do
    - f.has_many :domain_aliases, heading: false, allow_destroy: true do |a|
      = a.input :id, as: :hidden
      = a.input :domain
      = a.input :subdomain

  = f.actions
