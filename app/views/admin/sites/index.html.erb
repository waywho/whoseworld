<p style="color: green"><%= notice %></p>

<h1>Sites</h1>

<%= link_to "New site", new_admin_site_path, class: "btn btn-primary my-4 float-right" %>
<br class="clear-both" />

<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <table>
        <thead>
            <tr>
                <th scope="col" class="py-3 px-6">
                    Name
                </th>
                <th scope="col" class="py-3 px-6">
                    Subtitle
                </th>
                <th scope="col" class="py-3 px-6">
                    Subdomain
                </th>
                <th scope="col" class="py-3 px-6">
                    Domain
                </th>
                <th scope="col" class="py-3 px-6">
                    Slug
                </th>
                <th scope="col" class="py-3 px-6">
                    Orientation
                </th>
                <th scope="col" class="py-3 px-6">
                    Style
                </th>
            </tr>
        </thead>
        <tbody>
            <% @sites.each do |site| %>
              <%= render site %>
            <% end %>
        </tbody>
    </table>
</div>
