%h1 What's On
.p-6
  %ol.relative.border-s.border-gray-200.dark:border-gray-700
    - @musicals.each do |musical|
      %li.mb-10.ms-6
        %span.absolute.flex.items-center.justify-center.w-6.h-6.bg-blue-100.rounded-full.-start-3.ring-8.ring-white.dark:ring-gray-900.dark:bg-blue-900
          %svg.w-2.5.h-2.5.text-blue-800.dark:text-blue-300{"aria-hidden": "true", xmlns: "http://www.w3.org/2000/svg", fill: "currentColor", viewBox: "0 0 20 20"}
            %path{d: "M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"}

        %h3.flex.items-center.mb-1.text-lg.font-semibold.text-gray-900.dark:text-white= musical.title
        %time.block.mb-2.text-sm.font-normal.leading-none.text-gray-400.dark:text-gray-500= "UnRehearse on #{musical.date}"
        %p.mb-4.text-base.font-normal.text-gray-500.dark:text-gray-400.text-sm
          Sign up to join us for a day of singing
        = link_to "Sign up", new_burm_signup_path(musical.id),class: "btn btn-primary"
